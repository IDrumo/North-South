<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="password">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#303030</item>
    </style>
    <style name="login">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#303030</item>
    </style>
    <style name="enter_btn" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/default_btn_color</item>
        <item name="background">@drawable/login_enter</item>
    </style>
    <style name="text_view" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/default_btn_text_color</item>
        <item name="android:backgroundTint">@color/default_btn_color</item>
        <item name="android:background">@drawable/text_field_background</item>
    </style>
    <style name="popup_window">
        <item name="background">@drawable/popup_window</item>
    </style>
</resources>